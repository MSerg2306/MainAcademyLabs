@model ArvitumNew.Areas.Сonfiguration.Models.InformationChannelCreateViewModel
@{
    ViewBag.Title = "Добавление типа стельки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание канала привлечения клиентов</h2>

<form asp-controller="ReferenceBooks" asp-action="InformationChannelCreate">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="InformationChannelName" class="control-label">Название</label>
        <input type="text" asp-for="InformationChannelName" class="form-control" />
    </div>
    <div class="form-group">
        <a title="Отмена"
           class="btn btn-primary" asp-area="Сonfiguration" asp-controller="ReferenceBooks" asp-action="InformationChannelList">
            Отмена
        </a>
        <input type="submit" value="Добавить" class="btn btn-success" />
    </div>
</form>