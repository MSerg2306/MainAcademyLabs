@model ArvitumNew.Areas.Сonfiguration.Models.ShoesTypeCreateViewModel
@{
    ViewBag.Title = "Добавление типа стельки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление типа стельки</h2>

<form asp-action="ShoesTypeCreate" asp-controller="ReferenceBooks">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ShoesTypeName" class="control-label">Тип стельки</label>
        <input type="text" asp-for="ShoesTypeName" class="form-control" />
    </div>
    <div class="form-group">
        <a title="Отмена"
           class="btn btn-primary" asp-area="Сonfiguration" asp-controller="ReferenceBooks" asp-action="ShoesTypeList">
            Отмена
        </a>
        <input type="submit" value="Добавить" class="btn btn-success" />
    </div>
</form>