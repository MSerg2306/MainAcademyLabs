@model ArvitumNew.Areas.Сonfiguration.Models.ShoesTypeEditViewModel

@{
    ViewData["Title"] = "Редактирование типа стельки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование типа стельки</h2>

<form asp-controller="ReferenceBooks" asp-action="ShoesTypeEdit" class="form-group row">
    <div asp-validation-summary="All" class="text-danger"></div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <input type="hidden" asp-for="ShoesTypeId" />
        </div>
        <div class="form-group">
            <label asp-for="ShoesTypeName" class="col-md-2 control-label">Тип стельки</label>
            <div class="col-md-4">
                <input type="text" asp-for="ShoesTypeName" class="form-control" /><br />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label"></label>
            <div class="col-md-4">
                @Html.CheckBoxFor(x => x.Activ)
                @Html.LabelFor(x => x.Activ)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button name="submit" type="submit" class="btn btn-primary" value="Cansel">Отмена</button>
                <button name="submit" type="submit" class="btn btn-warning" value="Edit">Редактировать</button>
                <button name="submit" type="submit" class="btn btn-danger" value="Delete">Удалить</button>
            </div>
        </div>
    }
</form>