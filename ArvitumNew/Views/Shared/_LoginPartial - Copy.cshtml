<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
</head>
<body>
    <nav>
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
            <ul class="nav navbar-nav">
                <li><a asp-area="Identity" asp-controller="Users" asp-action="ChangePersonPassword" asp-route-name="@User.Identity.Name">Hello @User.Identity.Name!</a></li>
                @if (User.IsInRole("admin"))
                { 
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Roles & Users <b class="caret"></b></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a asp-area="Identity" asp-controller="Roles" asp-action="Index">Roles</a></li>
                            <li><a asp-area="Identity" asp-controller="Users" asp-action="Index">Users</a></li>
                        </ul>
                    </li>
                    <!--<li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Cities & Medical Centers <b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-area="Identity" asp-controller="Roles" asp-action="Index">Roles</a></li>
                                <li><a asp-area="Identity" asp-controller="Users" asp-action="Index">Users</a></li>
                            </ul>
                    </li>-->
                    <li><a asp-area="Сonfiguration" asp-controller="CityWorkPlace" asp-action="Index">Cities & Medical Centers </a></li>
                }
            </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form method="post" asp-area="Identity" asp-controller="Account" asp-action="LogOff">
                            <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
                        </form>
                    </li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a></li>
                    @*<li><a asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a></li>*@
                </ul>
            }
        </div>
    </nav>
</body>
</html>